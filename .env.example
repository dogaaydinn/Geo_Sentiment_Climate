# =============================================================================
# Environment Configuration Template
# Copy this file to .env and update with your actual values
# =============================================================================

# Application Settings
# =============================================================================
APP_NAME=Geo_Sentiment_Climate
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO
DEBUG=False

# API Settings
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=False

# Security
# =============================================================================
SECRET_KEY=your-secret-key-change-me-in-production
API_KEY=your-api-key-change-me
JWT_SECRET=your-jwt-secret-change-me
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://geo_climate:password@localhost:5432/geo_climate_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=geo_climate_db
DB_USER=geo_climate
DB_PASSWORD=secure_password_change_me
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600

# MLflow Configuration
# =============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=geo_climate_experiment
MLFLOW_ARTIFACT_ROOT=/mlflow/artifacts

# Weights & Biases Configuration
# =============================================================================
WANDB_API_KEY=your-wandb-api-key
WANDB_PROJECT=geo-sentiment-climate
WANDB_ENTITY=your-entity

# AWS Configuration (if using S3 for data storage)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=geo-climate-data
S3_PREFIX=air-quality

# Azure Configuration (alternative)
# =============================================================================
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_CONTAINER_NAME=geo-climate-data

# GCP Configuration (alternative)
# =============================================================================
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
GCS_BUCKET=geo-climate-data

# Model Configuration
# =============================================================================
MODEL_REGISTRY_DIR=./models/registry
MODEL_CACHE_SIZE=10
DEFAULT_MODEL_TYPE=xgboost
DEFAULT_TASK_TYPE=regression

# Data Paths
# =============================================================================
RAW_DATA_DIR=./data/raw
INTERIM_DATA_DIR=./data/interim
PROCESSED_DATA_DIR=./data/processed
ARCHIVE_DATA_DIR=./data/archive
METADATA_DIR=./data/metadata

# Logging Configuration
# =============================================================================
LOGS_DIR=./logs
LOG_FILE=geo_climate.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# Monitoring & Observability
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_change_me

# Sentry Configuration (Error Tracking)
# =============================================================================
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Email Configuration (for alerts)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_RECIPIENTS=admin@example.com,ops@example.com

# Airflow Configuration
# =============================================================================
AIRFLOW_HOME=/opt/airflow
AIRFLOW_EXECUTOR=LocalExecutor
AIRFLOW_DATABASE_URL=postgresql://airflow:airflow@localhost:5432/airflow_db

# Feature Flags
# =============================================================================
ENABLE_AUTHENTICATION=True
ENABLE_RATE_LIMITING=True
ENABLE_CACHING=True
ENABLE_METRICS_EXPORT=True
ENABLE_ML_TRACKING=True

# Performance Settings
# =============================================================================
MAX_WORKERS=4
REQUEST_TIMEOUT=30
BATCH_SIZE=1000
MAX_BATCH_SIZE=10000

# Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Data Processing Settings
# =============================================================================
CHUNK_SIZE=100000
MAX_ROWS_READ=1000000
SAMPLING_RATIO=0.05
CV_FOLDS=5
RANDOM_STATE=42

# Model Training Settings
# =============================================================================
N_TRIALS=50  # Optuna hyperparameter optimization trials
EARLY_STOPPING_ROUNDS=50
MAX_TRAINING_TIME_HOURS=24

# Kubernetes Settings (for production deployment)
# =============================================================================
K8S_NAMESPACE=geo-climate
K8S_SERVICE_ACCOUNT=geo-climate-sa
K8S_REPLICAS=3
K8S_CPU_REQUEST=500m
K8S_CPU_LIMIT=2000m
K8S_MEMORY_REQUEST=1Gi
K8S_MEMORY_LIMIT=4Gi
